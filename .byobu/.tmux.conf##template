#########################################################################

unbind C-b
unbind C-z
unbind C-x
set -g prefix C-Space

{% if yadm.class == "client" %}
set -g prefix M-s

# key bindings
# bind-key -n C-S-M-F5 source $BYOBU_PREFIX/share/byobu/profiles/tmuxrc
# bind-key -n C-S-Left previous-window
# bind-key -n C-S-Right next-window

